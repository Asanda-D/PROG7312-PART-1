@model List<MunicipalServicesApp.Models.Issue>
@{
    ViewData["Title"] = "Submitted Issues";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center" style="color:#2C64B4;">Submitted Issues</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Message"]</div>
    }

    @if (Model.Count == 0)
    {
        <p class="text-center">No issues submitted yet.</p>
    }
    else
    {
        <div class="row justify-content-center">
            @foreach (var issue in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@issue.Category</h5>
                            <p class="card-text"><strong>Location:</strong> @issue.Location</p>
                            <p class="card-text">@issue.Description</p>
                            @if (!string.IsNullOrEmpty(issue.AttachmentPath))
                            {
                                <p><strong>Attachment:</strong> <a href="@issue.AttachmentPath" target="_blank">View</a></p>
                            }
                            <p class="text-muted"><small>Submitted at: @issue.SubmittedAt.ToString("g")</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>